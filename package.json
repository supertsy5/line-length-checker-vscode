{
	"name": "line-length-checker-vscode",
	"displayName": "Line Length Checker",
	"description": "Highlights a line when it exceeds a certain length",
	"version": "0.1.1",
	"publisher": "supertsy5",
	"repository": {
		"type": "git",
		"url": "https://github.com/supertsy5/line-length-checker-vscode.git"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Line Length Checker",
			"properties": {
				"line-length-checker.lineLength": {
					"type": "number",
					"order": 0,
					"default": 79,
					"description":
					"Above what line length should we annoy you?"
				},
				"line-length-checker.blacklist": {
					"type": "array",
					"default": [
						"node_modules/**"
					],
					"description": "These files will be skipped."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "~1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}